<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/bgContainer"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Fondo animado: dos imÃ¡genes en loop horizontal -->
    <ImageView
        android:id="@+id/bg1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/bg_loop" />

    <ImageView
        android:id="@+id/bg2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/bg_loop" />

    <!-- Contenido -->
    <LinearLayout
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="24dp">

        <Button
            android:id="@+id/game1Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Juego 1"
            android:layout_marginBottom="16dp" />

        <Button
            android:id="@+id/game2Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Juego 2"
            android:layout_marginBottom="16dp" />

        <Button
            android:id="@+id/game3Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Juego 3" />

    </LinearLayout>
</FrameLayout>
