<?xml version="1.0" encoding="utf-8"?>


<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/bgContainer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_gradient">

    <!-- Fondo animado: dos imÃ¡genes en loop horizontal -->
    <ImageView
        android:id="@+id/bg1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/bg_gradient"
        android:contentDescription="@string/background_gradient"/>

    <ImageView
        android:id="@+id/bg2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/bg_gradient"
        android:contentDescription="@string/background_gradient"/>




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/padding_large">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end"
            android:paddingTop="@dimen/margin_medium">




            <ImageButton
                android:id="@+id/settingsButton"
                android:layout_width="@dimen/icon_size_medium"
                android:layout_height="@dimen/icon_size_medium"
                android:background="@drawable/button_bg"
                android:contentDescription="@string/user_settings"
                android:src="@drawable/ic_settings"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            >

            <TextView
                android:id="@+id/title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/menu_title"
                android:textSize="@dimen/text_size_title2"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:fontFamily="monospace"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/margin_xlarge">

        <Button
            android:id="@+id/game1Button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/button_bg"
            app:backgroundTint="@null"
            android:backgroundTint="@null"
            android:text="@string/game1"
            android:textSize="@dimen/text_size_regular"
            android:layout_marginBottom="@dimen/margin_medium"
            android:gravity="center_vertical"
            />

        <Button
            android:id="@+id/game2Button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/button_bg"
            app:backgroundTint="@null"
            android:backgroundTint="@null"
            android:text="@string/game2"
            android:layout_marginBottom="@dimen/margin_medium"
            android:gravity="center_vertical"
            />

        <Button
            android:id="@+id/game3Button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/button_bg"
            app:backgroundTint="@null"
            android:backgroundTint="@null"
            android:text="@string/game3"
            android:gravity="center_vertical"
            />


        </LinearLayout>

    </LinearLayout>
</FrameLayout>
