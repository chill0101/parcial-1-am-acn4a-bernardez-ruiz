<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:astounding="http://schemas.android.com/tools"
    android:background="@drawable/bg_gradient">

    <ImageView
        android:id="@+id/bg1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/bg_gradient"
        android:contentDescription="@string/background_gradient"/>

    <ImageView
        android:id="@+id/bg2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/bg_gradient"
        android:contentDescription="@string/background_gradient"/>

    <LinearLayout
        android:id="@+id/bottomNavContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:paddingVertical="12dp"
        android:paddingHorizontal="@dimen/padding_large"
        android:gravity="center_vertical"
        android:background="#A0181028">

        <ImageButton
            android:id="@+id/profileButton"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:src="@drawable/ic_timer_24"
            android:scaleType="fitCenter"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="@string/profile"/>

        <ImageButton
            android:id="@+id/rankingButton"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:src="@drawable/ic_leaderboard"
            android:scaleType="fitCenter"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="@string/ranking"/>

        <ImageButton
            android:id="@+id/achievementsButton"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:scaleType="fitCenter"

            android:src="@drawable/ic_medal_military_24"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="@string/achievements"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/headerContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:orientation="vertical"
        android:padding="@dimen/padding_large">

        <ImageButton
            android:id="@+id/homeButton"
            android:layout_width="@dimen/icon_size_medium"
            android:layout_height="@dimen/icon_size_medium"
            android:background="@drawable/button_bg"
            android:contentDescription="@string/home"
            android:src="@drawable/ic_home_small"
            android:layout_gravity="end"/>

        <!-- Título del menú -->
        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="@string/menu_title"
            android:textSize="@dimen/text_size_title2"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:fontFamily="monospace"/>

    </LinearLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/headerContainer"
        android:layout_above="@id/bottomNavContainer"
        android:clipToPadding="false"
        android:paddingTop="@dimen/margin_xlarge"
        android:paddingBottom="@dimen/padding_large"
        android:scrollbarStyle="outsideOverlay">


        <LinearLayout
            android:id="@+id/content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="@dimen/padding_large">

            <Button
                android:id="@+id/game1Button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/button_bg"
                app:backgroundTint="@null"
                android:backgroundTint="@null"
                android:text="@string/game1"
                android:textColor="@android:color/white"
                android:textSize="@dimen/text_size_regular"
                android:layout_marginBottom="@dimen/margin_medium"
                android:gravity="center_vertical"/>

            <Button
                android:id="@+id/game2Button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/button_bg"
                app:backgroundTint="@null"
                android:backgroundTint="@null"
                android:text="@string/game2"
                android:textColor="@android:color/white"
                android:textSize="@dimen/text_size_regular"
                android:layout_marginBottom="@dimen/margin_medium"
                android:gravity="center_vertical"/>

            <Button
                android:id="@+id/game3Button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/button_bg"
                app:backgroundTint="@null"
                android:backgroundTint="@null"
                android:text="@string/game3"
                android:textColor="@android:color/white"
                android:textSize="@dimen/text_size_regular"
                android:layout_marginBottom="@dimen/margin_medium"
                android:gravity="center_vertical"/>

            <Button
                android:id="@+id/game4Button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/button_bg"
                app:backgroundTint="@null"
                android:backgroundTint="@null"
                android:text="@string/game4"
                android:textColor="@android:color/white"
                android:textSize="@dimen/text_size_regular"
                android:layout_marginBottom="@dimen/margin_medium"
                android:gravity="center_vertical"/>

            <Button
                android:id="@+id/game5Button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/button_bg"
                app:backgroundTint="@null"
                android:backgroundTint="@null"
                android:text="@string/game5"
                android:textColor="@android:color/white"
                android:textSize="@dimen/text_size_regular"
                android:layout_marginBottom="@dimen/margin_medium"
                android:gravity="center_vertical"/>

            <Button
                android:id="@+id/game6Button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/button_bg"
                app:backgroundTint="@null"
                android:backgroundTint="@null"
                android:text="@string/game6"
                android:textColor="@android:color/white"
                android:textSize="@dimen/text_size_regular"
                android:layout_marginBottom="@dimen/margin_medium"
                android:gravity="center_vertical"/>

            <Button
                android:id="@+id/game7Button"
                android:text="ADIVINÀ LA BANDERA"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/button_bg"
                app:backgroundTint="@null"
                android:backgroundTint="@null"
                android:textColor="@android:color/white"
                android:textSize="@dimen/text_size_regular"
                android:layout_marginBottom="@dimen/margin_medium"
                android:gravity="center_vertical"/>




        </LinearLayout>
    </ScrollView>

</RelativeLayout>
