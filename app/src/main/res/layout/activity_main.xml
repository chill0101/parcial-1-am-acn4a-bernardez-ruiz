<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Fondo animado -->
    <FrameLayout
        android:id="@+id/bgContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/bg1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/bg_loop3" />

        <ImageView
            android:id="@+id/bg2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/bg_loop3" />
    </FrameLayout>

    <!-- Main Content -->
    <LinearLayout
        android:id="@+id/centerContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingHorizontal="32dp">

        <!-- Logo -->
        <ImageView
            android:id="@+id/titleIcon"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/reactio_logo"
            android:layout_marginBottom="8dp"/>

        <!-- Título con efecto Neón -->
        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp">
            <!-- Capas de texto para el efecto neón -->
            <TextView
                android:id="@+id/tvTituloStroke"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/app_name"
                android:textSize="40sp"
                android:textStyle="bold"
                android:textColor="#9D00FF"
                android:shadowColor="#B000FF"
                android:shadowDx="0"
                android:shadowDy="0"
                android:shadowRadius="32"/>
            <TextView
                android:id="@+id/tvTitulo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/app_name"
                android:textSize="40sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:shadowColor="#B000FF"
                android:shadowDx="0"
                android:shadowDy="0"
                android:shadowRadius="24"/>
        </FrameLayout>

        <!-- Welcome text -->
        <TextView
            android:id="@+id/tvWelcome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bienvenido!"
            android:textSize="18sp"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="24dp" />


        <Button
            android:id="@+id/btnEmpezar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/button_bg"
            app:backgroundTint="@null"
            android:backgroundTint="@null"
            android:text="Empezar a Jugar"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp"/>


        <Button
            android:id="@+id/btnMyStats"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/button_bg_outlined"
            app:backgroundTint="@null"
            android:backgroundTint="@null"
            android:text="Mis Estadísticas"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:layout_marginBottom="8dp" />

        <Button
            android:id="@+id/btnLeaderboard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/button_bg_outlined"
            app:backgroundTint="@null"
            android:backgroundTint="@null"
            android:text="Tabla de Líderes"
            android:textColor="@android:color/white"
            android:textSize="16sp" />

    </LinearLayout>

    <!-- Cerrar sesión -->
    <Button
        android:id="@+id/btnLogout"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="24dp"
        android:text="Cerrar Sesión"
        android:textColor="#FF5252"
        android:textSize="16sp"
        app:drawableLeftCompat="@drawable/ic_logout"
        app:drawableTint="#FF5252"
        android:drawablePadding="8dp"/>

</RelativeLayout>
