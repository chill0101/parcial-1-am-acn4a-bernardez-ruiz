<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Fondo animado -->
    <FrameLayout
        android:id="@+id/bgContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/bg1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/bg_loop3" />

        <ImageView
            android:id="@+id/bg2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/bg_loop3" />

    </FrameLayout>

    <LinearLayout
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="32dp">

        <!-- Logo y título -->
        <ImageView
            android:id="@+id/titleIcon"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="center_horizontal|top"
            android:layout_marginBottom="8dp"
            android:src="@drawable/reactio_logo" />

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="32dp">

            <!-- border layer / glow -->
            <TextView
                android:id="@+id/tvTituloStroke"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:shadowColor="#B000FF"
                android:shadowDx="0"
                android:shadowDy="0"
                android:shadowRadius="32"
                android:text="@string/app_name"
                android:textColor="#9D00FF"
                android:textSize="40sp"
                android:textStyle="bold" />

            <!-- inner layer / white -->
            <TextView
                android:id="@+id/tvTitulo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:shadowColor="#B000FF"
                android:shadowDx="0"
                android:shadowDy="0"
                android:shadowRadius="24"
                android:text="@string/app_name"
                android:textColor="#FFFFFF"
                android:textSize="40sp"
                android:textStyle="bold" />
        </FrameLayout>

        <!-- Mensaje de bienvenida -->
        <TextView
            android:id="@+id/tvWelcome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="¡Bienvenido!"
            android:textSize="18sp"
            android:textColor="#FFFFFF"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="12dp" />

        <!-- Botones de navegación -->
        <Button
            android:id="@+id/btnProfile"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:text="Mi Perfil"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="8dp" />

        <Button
            android:id="@+id/btnLeaderboard"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:text="Tabla de Líderes"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="8dp" />

        <Button
            android:id="@+id/btnLogout"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:text="Cerrar Sesión"
            android:layout_gravity="center_horizontal"
            android:textColor="#FF0000"
            android:layout_marginBottom="24dp" />

        <!-- Botón de empezar a jugar -->
        <Button
            android:id="@+id/btnEmpezar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button_bg"
            android:backgroundTint="@null"
            app:backgroundTint="@null"
            android:elevation="28dp"
            android:paddingLeft="32dp"
            android:paddingTop="12dp"
            android:paddingRight="32dp"
            android:paddingBottom="12dp"
            android:text="Empezar a Jugar"
            android:textColor="@android:color/white"
            android:textSize="20sp" />
    </LinearLayout>
</FrameLayout>